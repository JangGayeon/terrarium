{
  "expo": {
    "name": "healing-garden",
    "slug": "healing-garden",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "테라리움 이미지를 선택하기 위해 갤러리 접근 권한이 필요합니다.",
        "NSPhotoLibraryAddUsageDescription": "테라리움 이미지를 저장하기 위해 갤러리 접근 권한이 필요합니다."
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
